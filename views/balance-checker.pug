<!DOCTYPE html>
html
    head 
        title Balanced by Daylight: Balance Checker
        link(rel="stylesheet", href="/stylesheets/balance-checker.css")
        link(rel="icon", href="iconography/favicon.ico" type="image/x-icon")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/pako/2.1.0/pako.min.js")

        script(src="/scripts/checker/checker-globals.js", type="text/javascript", defer="defer")
        script(src="/scripts/checker/checker-constants.js", type="text/javascript", defer="defer")

        script(src="/scripts/checker/checker-utility.js", type="text/javascript", defer="defer")
        script(src="/scripts/checker/checker-modal.js", type="text/javascript", defer="defer")
        script(src="/scripts/checker/checker-search.js", type="text/javascript", defer="defer")
        script(src="/scripts/checker/checker-events.js", type="text/javascript", defer="defer")
        script(src="/scripts/checker/checker-error-validation.js", type="text/javascript", defer="defer")
        script(src="/scripts/checker/checker-frontend.js", type="text/javascript", defer="defer")
        script(src="/scripts/checker/checker-resources.js", type="text/javascript", defer="defer")

        script(src="/scripts/checker/checker-main.js", type="text/javascript", defer="defer")

        meta(name="viewport" content="width=device-width, initial-scale=1.0")
    body(onload="BeginResourceChain()")
        div#primary-balance-container
            div#balance-tabs-container
                div#role-swap-button(class="tier-selector-button")
                    img#role-swap-icon(src="iconography/Killer.webp")
                div#notes-button(class="tier-selector-button" onclick="GenerateNotesModal()")
                    img(src="iconography/Info.webp")
                div#maps-button(class="tier-selector-button" onclick="GenerateMapModal()")
                    img(src="iconography/Maps.webp")
                div#settings-button(class="tier-selector-button")
                    img(src="iconography/Settings.webp")
                div#discord-button(class="tier-selector-button" onclick="window.open('https://discord.gg/E6zfpwvCce', '_blank')")
                    img(src="iconography/Discord.webp")
                div.tier-selector-button(onclick="window.location.href = '/'")
                    img(src="iconography/Logo-Shadow.webp")
            div#balance-character-select-container
                h1 Killer Selection
                div#character-select-grid(class="override-scrollbar")
                    - var l = 10;
                    while l > 0
                        div.lazy-character-loader
                        - l--;
            div#main-balance-window
                h2#selected-balance-title Selected Balance: {BALANCE NAME}
                div.horizontal-flex
                    h2#selected-killer-title Selected Killer: {KILLER NAME}
                    img#anticamp-badge(src="iconography/Anticamp-Permitted.webp")
                h2#selected-role-header Survivor Builds
                div#survivor-builds-container(class="hide-component")
                    div.survivor-build-component
                        div.perk-slot(class="loadout-slot")
                            img(src="public/Perks/Survivors/Adrenaline.webp")
                        div.perk-slot(class="loadout-slot")
                            img(src="public/Perks/Survivors/Deliverance.webp")
                        div.perk-slot(class="loadout-slot")
                            img(src="public/Perks/Survivors/Hope.webp")
                        div.perk-slot(class="loadout-slot")
                            img(src="public/Perks/Survivors/Kinship.webp")
                        div.offering-slot(class="loadout-slot")
                            img(src="public/Offerings/Annotated-Blueprint.webp")
                        div.item-slot(class="loadout-slot")
                            img(src="public/Items/Flashlight.webp")
                        div.addon-slot(class="loadout-slot" data-addonSlot="0")
                            img(src="public/Addons/Long-Life-Battery.webp")
                        div.addon-slot(class="loadout-slot" data-addonSlot="1")
                            img(src="public/Addons/Low-Amp-Filament.webp")
                    div.survivor-build-component
                        div.perk-slot(class="loadout-slot")
                            img(src="public/Perks/Survivors/Adrenaline.webp")
                        div.perk-slot(class="loadout-slot")
                            img(src="public/Perks/Survivors/Deliverance.webp")
                        div.perk-slot(class="loadout-slot")
