                            img(src="public/Offerings/Annotated-Blueprint.webp")
                        div.item-slot(class="loadout-slot")
                            img(src="public/Items/Flashlight.webp")
                        div.addon-slot(class="loadout-slot" data-addonSlot="0")
                            img(src="public/Addons/Long-Life-Battery.webp")
                        div.addon-slot(class="loadout-slot" data-addonSlot="1")
                            img(src="public/Addons/Low-Amp-Filament.webp")
                div#killer-builds-container
                    div#killer-build-component
                        div.perk-slot(class="loadout-slot killer-perk-slot")
                            img(src="public/Perks/Killers/Agitation.webp")
                        div.perk-slot(class="loadout-slot killer-perk-slot")
                            img(src="public/Perks/Killers/Brutal-Strength.webp")
                        div.perk-slot(class="loadout-slot killer-perk-slot")
                            img(src="public/Perks/Killers/Enduring.webp")
                        div.perk-slot(class="loadout-slot killer-perk-slot")
                            img(src="public/Perks/Killers/Insidious.webp")
                        div.power-slot(class="loadout-slot killer-perk-slot")
                            img(src="public/Powers/Trapper.webp")
                        div.addon-slot(class="loadout-slot killer-perk-slot" data-addonSlot="0")
                            img(src="public/PowerAddons/Trapper/4-Coil-Spring-Kit.webp")
                        div.addon-slot(class="loadout-slot killer-perk-slot" data-addonSlot="1")
                            img(src="public/PowerAddons/Trapper/Bear-Oil.webp")
                div#import-export-button-container
                    button#import-button Import Loadout
                    button#export-button Export Loadout
                    button#generate-image-button Generate Image
                    button#clear-loadout-button Clear Loadout
            div#errors-window
                h1#error-panel-title Errors
                div#error-list-container(class="override-scrollbar")
        div#perk-search-container(class="background-blur" hidden="hidden")
            div#perk-search-module-container
                div.perk-search-bar-module
                    input#perk-search-bar(type="text", placeholder="Search Perks...")
                div#perk-search-results-module(class="override-scrollbar")
                    div.perk-slot-result
                        img(src="public/Perks/Survivors/Adrenaline.webp")
                h3#perk-highlight-name Select a Perk...
        div#settings-container(hidden="hidden")
            div#settings-blur(class="background-blur")
                div#settings-menu
                    h1 Settings Menu
                    button#balancing-select-button Select a Preset...
                    br
                    label(for="custom-balancing-checkbox") Enable Custom Balancing?
                    input#custom-balancing-checkbox(type="checkbox")
                    br
                    textarea#custom-balance-select(class="override-scrollbar", placeholder="Enter Custom Balance JSON...", rows="15", hidden="hidden")
                    br
                    label(for="only-non-banned") Only show allowed Perks/Offerings/Items?
                    input#only-non-banned(type="checkbox")
                    br
                    label(for="auto-show-notes") Automatically show notes on change?
                    input#auto-show-notes(type="checkbox")
                    br
                    span#save-loadouts-killer-container(hidden="hidden")
                        label(for="save-loadouts-killer") Auto-save Loadouts & Killer selected?
                        input#save-loadouts-killer(type="checkbox")
                        br
                    label(for="enable-survivor-markers" hidden="hidden") Enable Survivor Markers?
                    input#enable-survivor-markers(type="checkbox" hidden="hidden")
                    br
                    div#custom-error(class="error-flash-animation" hidden="hidden")
                        p Custom Balance JSON is invalid. Please verify your JSON <a href="https://jsonlint.com/" target="_blank">here</a>.
                    p Made by Kyle Starr and <span style="color:#30beff;cursor:pointer;text-decoration:underline;" onclick="DisplayCredits()">Contributors</span> (v1.1)
                    div#settings-button-container
                        button#settings-clear-storage-button Clear Settings
                        button#settings-cancel-button Close
        div#balancing-select-container(hidden="hidden")
            div#balancing-select-blur(class="background-blur")
                div#balancing-select-menu
                    h1#balancing-select-title Balancing Select
                    p#balancing-select-subtitle Select your desired balancing preset from the options below:
                    input#balancing-select-search-input(type="search" placeholder="Search for Balancing Presets...")
                    div#balancing-select-options-container
                    button#balancing-select-close-button Cancel
        div#image-gen-container(hidden="hidden")
            div#image-gen-blur(class="background-blur")
                div#image-gen-menu
                    h1#image-gen-title Test
                    p#image-gen-message Test
                    img#image-gen-image(hidden="hidden")
                    div#image-gen-button-container
                        button#image-gen-ok-button OK
        div#alert-container(hidden="hidden")
            div#alert-blur(class="background-blur")
                div#alert-menu
                    h1#alert-title Test
                    p#alert-message Test
                    div#alert-button-container
                        button#alert-ok-button OK